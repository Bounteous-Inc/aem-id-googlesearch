<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Raw HTML Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="HTML / JS / CSS Code">
                	<items jcr:primaryType="cq:WidgetCollection">
                		<title
			            	jcr:primaryType="cq:Widget"
			                fieldDescription="Specify a title for this HTML code so it can be identified in Author mode (not displayed in publish runmode)"
			                fieldLabel="Title"
			                name="./title"
			                xtype="textfield"/>
	                    <rawHTML
			            	jcr:primaryType="cq:Widget"
			                fieldDescription=""
			                fieldLabel=""
			                style="height:200px;"
			                name="./rawHTML"
			                xtype="textarea"/>
	                </items>
                </tab1>
        </items>
    </items>
</jcr:root>
