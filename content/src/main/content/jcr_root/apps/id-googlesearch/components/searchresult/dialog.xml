<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Google Custom Search Results"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Options">
                	<items jcr:primaryType="cq:WidgetCollection">
                		<showSearchBox
		                    jcr:primaryType="cq:Widget"
		                    defaultValue=""
		                    fieldDescription="Displays the search input field above the results"
		                    fieldLabel="Show Search Box"
		                    name="./showSearchBox"
		                    type="checkbox"
		                    xtype="selection"/>
	                </items>
                </tab1>
        </items>
    </items>
</jcr:root>
