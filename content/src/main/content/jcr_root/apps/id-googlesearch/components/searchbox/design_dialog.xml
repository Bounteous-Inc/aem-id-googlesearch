<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Google Customsearch Box"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Configuration">
                	<items jcr:primaryType="cq:WidgetCollection">
                		<resultPage
			            	jcr:primaryType="cq:Widget"
			                fieldDescription="Specify the search result page you want this search box to redirect to"
			                fieldLabel="Result Page"
			                name="./resultPage"
			                xtype="pathfield"/>
	                </items>
                </tab1>
        </items>
    </items>
</jcr:root>
